# Frontend (Next.js) variables
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Server (Vercel Functions) variables
# Put these in Vercel Project Settings â†’ Environment Variables for production.
# For local `vercel dev`, run: `vercel env pull .env` (or manage via Vercel UI).
SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
GEMINI_API_KEY=your_gemini_api_key
WHATSAPP_BUSINESS_NUMBER=911234567890

# CORS + Rate limiting
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:5173,https://coolcare.example.com
ALLOWED_ORIGINS=http://localhost:3000
# Rate limit window in ms and max requests per IP per window
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Admin (env-based) credentials
ADMIN_ID=admin
ADMIN_PASSWORD=strong_password_here
# Optional: secret to sign admin session cookie (fallbacks to ADMIN_PASSWORD if not set)
ADMIN_SESSION_SECRET=change_me_strong_secret
